[user]
    name = Chris Gilmer
    email = chris@truss.works
    # Keybase
    signingkey = 9B9B5634A88AB754
    # Yubikey
    # signingkey = EDC220AD0A4E6839E0A6A4F7B3B5C1A76D730A90
[github]
    user = chrisgilmerproj
[core]
    editor = vim
    whitespace = space-before-tab,trailing-space
    excludesfile = /Users/cgilmer/.gitignore_global
[diff]
    tool = vimdiff
[alias]
    st = status --short --branch
    br = branch
    ci = commit
    co = checkout
    df = diff
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    yd = diff "@{yesterday}"
    prune = gc --prune=now
    contrib = blame
    shorty = status --short --branch
    commend = commit --amend --no-edit
    unadd = reset HEAD
    undo = reset --soft HEAD~1
    ocmmit = commit
    rev = rev-parse --verify HEAD
    skip = update-index --skip-worktree
    unskip = update-index --no-skip-worktree
    tags = tag --list
    head = reset --hard HEAD
    c = "c() { git add \"$@\" && git commit \"$@\" ; } ; c"
    pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
    last = "rev-parse --short --verify HEAD"
    main = !git init && git checkout -b main
[color]
    branch = auto
    diff   = auto
    interactive = auto
    status = auto
    ui = auto
[branch]
    autosetuprebase = always
[url "git@github.com:"]
    insteadOf = https://github.com/
[help]
    autocorrect = 20
[commit]
    gpgsign = true
[gpg]
    program = gpg
[pull]
    ff = only
    rebase = false
[init]
    defaultBranch = main
