[user]
    name = Chris Gilmer
    email = chris.gilmer@gmail.com
[github]
    user = chrisgilmerproj
[core]
    editor = vim
    whitespace = space-before-tab,trailing-space
[diff]
    tool = vimdiff
[alias]
    st = status
    br = branch
    ci = commit
    co = checkout
    df = diff
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    yd = diff "@{yesterday}"
[color]
    branch = auto
    diff   = auto
    interactive = auto
    status = auto
    ui = auto
